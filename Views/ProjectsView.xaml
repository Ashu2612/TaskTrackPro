<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTrackPro.Views.ProjectsView">
    <ScrollView>
        <VerticalStackLayout x:Name="MainView">
            <Grid>
                <Grid Grid.Row="0" x:Name="MainGrid"></Grid>
                <ActivityIndicator Grid.Row="0" x:Name="ActivityInd" HorizontalOptions="Center" VerticalOptions="Center" IsRunning="False" ></ActivityIndicator>
                <Label x:Name="TaskTimer" HorizontalOptions="Center" VerticalOptions="Center" ></Label>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
